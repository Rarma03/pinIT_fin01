<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl ">Create a New Post!</h1>
    <hr class="opacity-30 mt-2">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 " type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 text-black" type="text" name="title" placeholder="Title">
        <textarea class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 h-60 resize-none text-black" type="text" name="postdescription" placeholder="Describe about your Post"></textarea>
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 bg-red-600" type="submit" value="Post It! 0w0">
    </form> 
</div>

