<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center bg-[url(https://source.unsplash.com/random/?abstract)] bg-center bg-cover">
  <div class="w-96 bg-zinc-100 px-10 py-10 rounded-[30px]">
    <h1 class="text-3xl text-center capatilize leading-none tracking-tight mb-3">Create New</h1>
    <h1 class="text-3xl text-center capatilize leading-none tracking-tight"><strong class="flex w-full items-center justify-center"><p class="text-red-600">It</p>count</strong></h1>
    <%if(error.length > 0){%>
      <h1 class="text-red-600 text-center mt-2"><%=error%></h1>  
    <%}%>
    <form action="/register" method="post">
      <input class="block w-full px-3 py-2 mt-2 rounded-md border-2" type="text" name="username" placeholder="Username">

      <input class="block w-full px-3 py-2 mt-2 rounded-md border-2" type="email" name="email" placeholder="Email">

      <input class="block w-full px-3 py-2 mt-2 rounded-md border-2" type="number" name="contact" placeholder="Contact" maxlength="10">

      <input class="block w-full px-3 py-2 mt-2 rounded-md border-2" type="text" name="password" placeholder="Password">

      <input class="block w-full px-3 py-2 text-white bg-red-600 rounded-full mt-10" type="submit" value="Create Account">

      <p class="text-xs font-semibold text-zinc-700 mt-7 mx-auto text-center w-3/4">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection </p>
    </form>
    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already have a Account. Login!</a>
  </div>

</div>

<% include ./partials/footer.ejs %>